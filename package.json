{
  "name": "web-sample",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "11.14.0",
    "npm": "6.7.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "start": "npm run clean && npm run build:scripts && concurrently 'npm run build:scripts:watch' 'npm run bundle:scripts:watch' 'npm run server:dev'",
    "build": "npm run clean && concurrently 'npm run build:scripts' 'NODE_ENV=production npm run bundle:scripts'",
    "build:scripts": "tsc -p tsconfig.prod.json",
    "build:scripts:watch": "tsc -w -p tsconfig.json",
    "bundle:scripts": "webpack --mode production",
    "bundle:scripts:watch": "webpack -w --mode development",
    "server": "NODE_PATH=dist node ./dist/server/index.js",
    "server:dev": "NODE_PATH=dist nodemon -w ./dist -x node ./dist/server/index.js",
    "lint": "eslint '{src/**/,cli/**/,}*.{ts,tsx,js,jsx,json}'",
    "lint:fix": "eslint --fix '{src/**/,cli/**/,}*.{ts,tsx,js,jsx,json}'",
    "check": "npx npm-check-updates",
    "test": "jest",
    "test:ci": "npm run test && codecov",

    "migrate": "npm run migrate:up",
    "migrate:status": "migrate-mongo status",
    "migrate:create": "migrate-mongo create -- ",
    "migrate:up": "migrate-mongo up",
    "migrate:down": "migrate-mongo down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/enzyme": "3.9.3",
    "@types/express": "4.16.1",
    "@types/history": "4.7.2",
    "@types/jest": "24.0.13",
    "@types/loadable__component": "5.9.0",
    "@types/node": "12.0.4",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "@types/react-helmet": "5.0.8",
    "@types/react-intl": "2.3.17",
    "@types/react-redux": "7.0.9",
    "@types/react-router": "5.0.1",
    "@types/react-router-dom": "4.3.3",
    "@types/redux": "3.6.0",
    "@types/styled-components": "4.1.15",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "concurrently": "4.1.0",
    "enzyme": "3.9.0",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.13.0",
    "jest": "24.8.0",
    "migrate-mongo": "5.0.1",
    "nodemon": "1.19.1",
    "prettier": "1.17.1",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.2",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "3.5.1",
    "webpack": "4.32.2",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.3.2",
    "webpack-manifest-plugin": "2.0.4"
  },
  "dependencies": {
