{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "./node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "./node_modules/**/*.d.ts",
    "src/presentations/**/*.ts",
    "src/presentations/**/*.tsx"
  ]
}
